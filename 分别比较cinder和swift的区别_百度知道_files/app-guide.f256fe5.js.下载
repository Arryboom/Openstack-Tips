define("question:widget/js/app-guide/app-guide",function(a){var e=a("common:widget/js/util/tangram/tangram"),s=a("common:widget/js/util/event/event"),p=a("common:widget/js/util/log/log");s.on("appGuide.show",function(){e("#answer-app-guide").size()||(setTimeout(function(){e("<div/>").prop({id:"answer-app-guide","class":"answer-app-guide"}).html(["<i></i>","<span>",'来<span>知道客户端</span>答题，采纳即可多得<b class="ml-5">30</b>（财富值+经验值）',"</span>"].join("")).insertBefore(e("#answer-editor .addons"))},300),p.addKey({area:"answer-app-guide"}))}),s.on("appGuide.hide",function(){e("#answer-app-guide").size()&&e("#answer-app-guide").addClass("disappear")}),s.on("appLayer.show",function(){if((!e("#answer-app-layer").size()||e("#answer-app-layer").hasClass("disappear"))&&p.addKey({area:"answer-app-layer"}),e("#answer-app-layer").size()){var a=e("#answer-app-layer");a.hasClass("disappear")&&a.removeClass("disappear")}else e("<div/>").prop({id:"answer-app-layer","class":"answer-app-layer line"}).html(['<div class="arrow"></div>','<a class="close-app-layer" href="#">X</a>','<div class="grid left">','<h1 class="mb-10">客户端答题 翻身当土豪</h1>',"<p>在客户端回答问题被采纳，可在已有奖励基础上额外获得 30 (财富值+经验值)</p>","</div>",'<div class="grid erweima ml-10 mr-10 mt-5"></div>','<div class="grid right mt-10">',"<p>请使用百度、UC等浏览器客户端扫码下载</p>","</div>"].join("")).appendTo("#answer-app-guide")}),s.on("appLayer.hide",function(){e("#answer-app-layer").size()&&e("#answer-app-layer").addClass("disappear")});var i=function(){e(document).click(function(a){e(a.target).closest("#answer-app-layer").size()?e(a.target).closest(".close-app-layer").size()&&(a.preventDefault(),s.fire("appLayer.hide")):s.fire(e(a.target).closest("#answer-app-guide").size()?e("#answer-app-layer").size()?e("#answer-app-layer").hasClass("disappear")?"appLayer.show":"appLayer.hide":"appLayer.show":"appLayer.hide")}),s.on("editor.focus",function(){e("#answer-app-layer").size()&&e("#answer-app-layer").addClass("disappear")});var a;e(document).mouseover(function(p){var i=e(p.target);i.closest(".answer-app-guide").size()?(clearTimeout(a),a=setTimeout(function(){i.closest(".answer-app-guide").size()&&s.fire("appLayer.show")},1e3)):clearTimeout(a)})};i()});